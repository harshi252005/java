import java.util.Arrays;

public class maxmin {
    public static void main(String args[]) {
        int[] arr = {12, 13, 45, 86, 99, 107};
        Arrays.sort(arr);
        System.out.println("Sorted array:" + Arrays.toString(arr));
            System.out.println("Minimum number in array is " + arr[arr.length - (arr.length)] + " at index:"+(arr.length-arr.length));
            System.out.println("Maximum number in array is " + arr[arr.length - 1]+ " at index:"+(arr.length-1));
    }
}
